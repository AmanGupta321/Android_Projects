<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img9"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="15dp"
    tools:context=".Kotlin_EnglishQuotes.EnglishQuotes_MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="top"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:entries="@array/englishQuotesTag"
            android:foregroundTint="@color/white"
            android:padding="10dp"
            android:id="@+id/spinner1"
            android:background="@drawable/spinner_design"
            android:popupBackground="#C3FFFFFF"
            />
        <ImageButton
            android:id="@+id/translate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E4090808"
            android:fontFamily="@font/aldrich"
            android:background="@drawable/translate"
            android:onClick="translateLanguage"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/quotes_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates_extrabold"
            android:text="Success is not the key to happiness.\nHappiness is the key to success.\nIf you love what you are doing, you will be successful."
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/akaya_telivigala"
            android:text="~ Merman Cain"
            android:textColor="@color/white"
            android:textSize="19sp" />

        <ImageButton
            android:id="@+id/buttonShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/share"
            android:contentDescription="Share"
            android:onClick="share_btn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:gravity="bottom|end">

        <TextView
            android:id="@+id/tagName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="TAG: Happiness\nEnglish Quotes"
            android:fontFamily="@font/aldrich"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >
            <Button
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:onClick="pause_btn"
                android:drawableLeft="@drawable/pause"
                android:backgroundTint="#8947D5"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Pause"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="next_btn"
                android:backgroundTint="#8947D5"
                android:drawableLeft="@drawable/next"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="next"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>